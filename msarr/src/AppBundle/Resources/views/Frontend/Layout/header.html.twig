<header role="banner" class="header--app">
  <div class="logo" title=""><img class="margin--r" src="{{ asset('bundles/app/img/svg/edblog-logo.svg') }}" alt="EdBlog"></div>
	<nav class="flright visible-sm-block visible-md-block visible-lg-block">
    <a href="#">Accueil</a>
    <ul>
      {% set root = root_category["default"]%}
        {% for category in root.getChildren()  if category.name == "Tapha" %}
        {% for parent in category.getChildren() %}
           <li>
              <a href="#">{{parent.name}}</a>
              <ul>
                {% for children in parent.getChildren() %}
                  <li><a href="#">{{children.name}}</a></li>
                {%endfor%}
              </ul>
          </li>
        {%endfor%}
        {%endfor%}
      
  </ul>
    {% if app.user %}
      <a class="{% if currentPath == 'app_blog' or currentPath == 'blog_frontend_index' %} active{% endif %}" href="{{ path('blog_frontend_index') }}">Articles</a>
      <a class="" href="{{ path('blog_frontend_index') }}">Admin panel</a>
      <a class="" href="{{ path('fos_user_security_logout') }}">Logout</a>
    {% else %}
      <a class="{% if currentPath == 'blog_frontend_index' or currentPath == 'blog_frontend_index' %} active{% endif %}" href="{{ path('blog_frontend_index') }}">Articles</a>
      <a class="btn btn-primary white" href="{{ path('fos_user_security_login') }}">Login</a>
    {% endif %}
      
	</nav>
</header>

{# Menu on small devices #}
<div class="header--app small-res visible-xs-block">
  <a href="#" class="brdr--0 text--14 js-toggler"><i class="fa fa-reorder"></i> menu</a>
	<nav class="toggled">
    {% if app.user %}
      <a class="{% if currentPath == 'blog_frontend_index'%} active{% endif %}" href="{{ path('blog_frontend_index') }}">Articles</a>
      <a class="" href="{{ path('blog_frontend_index') }}">Admin panel</a>
      <a class="" href="{{ path('fos_user_security_logout') }}">Logout</a>
    {% else %}
      <a class="{% if currentPath == 'blog_frontend_index'%} active{% endif %}" href="{{ path('blog_frontend_index') }}">Articles</a>
      <a class="btn btn-primary white" href="{{ path('fos_user_security_login') }}">Login to access admin panel</a>
    {% endif %}
	</nav>
</div>