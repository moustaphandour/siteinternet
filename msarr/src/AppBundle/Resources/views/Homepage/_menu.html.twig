<div class="dashboard-menu alltheway">
  <a href="#" class="toggle--dashboard-menu"><i class="fa fa-reorder"></i> menu</a>
  <nav>
    <ul>
      <li class="{% if currentPath == 'ed_blog_homepage_index' %}active{% endif %}"><a href="{{ path('ed_blog_homepage_index') }}"><i class="fa fa-th"></i> Dashboard</a></li>
      <li class="{% if 'article' in currentPath %}active{% endif %}"><a href="{{ path('ed_blog_admin_article_list') }}"><i class="fa fa-file-text"></i> Articles</a></li>
      {% if is_granted('ROLE_BLOG_ADMIN') %}
        <li class="{% if currentPath == 'ed_blog_user_list' %}active{% endif %}"><a href="{{ path('ed_blog_user_list') }}"><i class="fa fa-user"></i> Users</a></li>
        <li class="{% if currentPath == 'ed_blog_category_list' %}active{% endif %}"><a href="{{ path('ed_blog_category_list') }}"><i class="fa fa-list"></i> Categories</a></li>
