      {% endif %}
      {% if is_granted('ADMINISTRATE_COMMENTS') %}
        <li class="{% if currentPath == 'ed_blog_admin_comment_list' %}active{% endif %}"><a href="{{ path('ed_blog_admin_comment_list') }}"><i class="fa fa-comments"></i> Comments</a></li>
      {% endif %}
      <li class="{% if currentPath == 'ed_blog_admin_media_list' %}active{% endif %}"><a href="{{ path('ed_blog_admin_media_list') }}"><i class="fa fa-photo"></i> Media library</a></li>
      {% if is_granted('ROLE_BLOG_ADMIN') %}
        <li class="{% if currentPath == 'ed_blog_admin_settings_edit' %}active{% endif %}"><a href="{{ path('ed_blog_admin_settings_edit') }}"><i class="fa fa-cogs"></i> Settings</a></li>
      {% endif %}
    </ul>
  </nav>
  <p class="copyright">Powered by <br><span class="text--upper">Eton Digital</span> &copy; {{ "now"|date('Y') }} </p>
