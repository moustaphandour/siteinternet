<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ 'tapha_blog.blog_title'|parameter() }}</title>
        <description>{{ 'tapha_blog.blog_rss_description'|parameter() }}</description>
        <atom:link rel="self" type="application/rss+xml" href="{{ app.request.schemeAndHttpHost }}{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
        <link>{{ app.request.schemeAndHttpHost }}</link>
        {% for entity in entities %}
        <item>
            <title><![CDATA[{{ entity|raw }}]]></title>
            <description><![CDATA[{{ entity.accrocheAsText|raw }}]]></description>
            <pubDate>{{ entity.publied|date("D, d M Y H:i:s O") }}</pubDate>
            <link>{{ app.request.schemeAndHttpHost }}{{ path('blog_post_show', entity.routingParams) }}</link>
            <guid>{{ app.request.schemeAndHttpHost }}{{ path('blog_post_show', entity.routingParams) }}</guid>
        </item>
        {% endfor %}
    </channel>
</rss>