{% extends 'TaphaBlogBundle::admin-layout.html.twig' %}
{% set page_title = 'admin.comment.title'|trans({}, 'TaphaBlogBundle') ~ ' "' ~ entity.post.title ~ '"' %}

{% block title %}{{ page_title }} - {{ parent() }}{% endblock %}

{% block content_body %}
<h1>{{ page_title }}</h1>

<form name="comment_edit" action="{{ path('badp_comment_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('badp_comment') }}">
            {{ 'admin.back'|trans({}, 'TaphaBlogBundle') }}
        </a>
    </li>
    <li><button type="button" onclick="forms.comment_edit.submit();">{{ 'admin.register'|trans({}, 'TaphaBlogBundle') }}</button></li>
    <li>
        <form action="{{ path('badp_comment_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">{{ 'admin.remove'|trans({}, 'TaphaBlogBundle') }}</button>
        </form>
    </li>
</ul>
{% endblock %}
